{
  "manifest_version": 3,
  "name": "プレゼンツール",
  "version": "1.0.0",
  "description": "プレゼンテーションの時間管理とスライド進行を支援するChrome拡張機能",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "プレゼンツール"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
